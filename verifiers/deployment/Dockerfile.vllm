# Custom vLLM image with verifiers weight sync support
FROM vllm/vllm-openai:latest

# Install additional dependencies
RUN pip install --no-cache-dir pyyaml

# Copy verifiers vLLM server with weight sync extension
COPY verifiers/inference/vllm_server.py /workspace/verifiers_vllm_server.py

# Set custom entrypoint to use our vLLM server
ENTRYPOINT ["python", "/workspace/verifiers_vllm_server.py"]